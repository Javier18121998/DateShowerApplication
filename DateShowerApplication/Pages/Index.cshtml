@page
@using System

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hora Actual</title>
    <style>
        /* Estilos generales */
        body {
            font-family: 'Arial', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #1b1b1b;
            color: #ffffff;
            text-align: center;
        }

        /* Contenedor principal */
        .container {
            background-color: #333;
            padding: 40px 60px;
            border-radius: 12px;
            box-shadow: 0px 8px 30px rgba(0, 0, 0, 0.5);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        /* Título */
        h2 {
            font-size: 24px;
            margin-bottom: 20px;
            letter-spacing: 1.5px;
            color: #ffbf00;
        }

        /* Efecto hover para el contenedor */
        .container:hover {
            transform: scale(1.05);
            box-shadow: 0px 10px 40px rgba(0, 0, 0, 0.6);
        }

        /* Estilo para los botones */
        .timezone-button {
            margin: 5px;
            padding: 10px 15px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            background-color: #ffbf00;
            color: #333;
            transition: background-color 0.3s;
        }

            .timezone-button:hover {
                background-color: #ffc107;
            }

    </style>
</head>

<body>
    <div class="container">
        <h2 id="timezoneTitle">Hora Actual en Mexico</h2>
        <div id="timeDisplay">Cargando...</div>

        <div>
            <button class="timezone-button" onclick="updateTime('Mexico')">CDMX</button>
            <button class="timezone-button" onclick="updateTime('Sydney')">Sidney</button>
            <button class="timezone-button" onclick="updateTime('Australia')">Australia</button>
            <button class="timezone-button" onclick="updateTime('Russia')">Rusia</button>
        </div>
    </div>

    <script>
        let currentTimezone = 'Mexico'; // Zona horaria predeterminada

        function updateTime(timezone) {
            currentTimezone = timezone; // Actualiza la zona horaria seleccionada

            // Cambia el título del h2 según la zona horaria seleccionada
            const timezoneTitles = {
                'Mexico': 'Hora Actual en Mexico',
                'Sydney': 'Hora Actual en Sidney',
                'Australia': 'Hora Actual en Australia',
                'Russia': 'Hora Actual en Rusia'
            };
            document.getElementById('timezoneTitle').innerText = timezoneTitles[timezone];

            // Llama a la API para obtener la hora actual
            fetch(`/time?timezone=${timezone}`)
                .then(response => response.text())
                .then(data => {
                    document.getElementById('timeDisplay').innerText = data;
                })
                .catch(error => console.error('Error:', error));
        }

        // Llamamos a updateTime cada segundo
        setInterval(() => updateTime(currentTimezone), 1000);
        updateTime(currentTimezone); // Inicializa la hora
    </script>
</body>

</html>
